<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--MUITopbar default style-->
    <style name="MUITopBarDefStyle">
        <item name="mui_topbar_need_separator">true</item>
        <item name="mui_topbar_separator_color">@color/mui_config_color_separator</item>
        <item name="mui_topbar_separator_height">@dimen/dp_1</item>
        <item name="mui_topbar_bg_color">@color/mui_config_color_white</item>
        <item name="mui_topbar_title_container_padding_hor">@dimen/dp_5</item>
        <item name="mui_topbar_title_text_size">@dimen/sp_17</item>
        <item name="mui_topbar_title_with_subtitle_text_size">@dimen/sp_15</item>
        <item name="mui_topbar_title_text_color">@color/mui_config_color_gray_1</item>
        <item name="mui_topbar_subtitle_text_size">@dimen/sp_12</item>
        <item name="mui_topbar_subtitle_text_color">@color/mui_config_color_gray_3</item>
        <item name="mui_topbar_title_gravity">center</item>
        <item name="mui_topbar_left_back_drawable_id">@drawable/mui_default_left_back_drawable
        </item>
        <item name="mui_topbar_side_container_padding_hor">@dimen/dp_2</item>
        <item name="mui_topbar_side_imagebutton_width">@dimen/dp_35</item>
        <item name="mui_topbar_side_imagebutton_height">@dimen/dp_35</item>
        <item name="mui_topbar_side_imagebutton_padding_hor">@dimen/dp_5</item>
        <item name="mui_topbar_side_imagebutton_margin_hor">@dimen/dp_3</item>
        <item name="mui_topbar_side_textview_text_size">@dimen/sp_16</item>
        <item name="mui_topbar_side_textview_text_color">@color/mui_config_color_gray_3</item>
        <item name="mui_topbar_side_textview_padding_hor">@dimen/dp_3</item>
    </style>

    <!--MUIDialog default style-->
    <style name="MUI.Dialog" parent="android:Theme.Dialog">
        <item name="android:backgroundDimAmount">?attr/mui_dialog_background_dim_amount</item>
        <item name="android:windowBackground">@color/mui_config_color_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item><!-- 在中间弹框、背后有遮罩的效果 -->
    </style>

    <style name="MUI.Dialog.TitleDefStyle">
        <item name="android:textColor">@color/mui_config_color_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingLeft">?attr/mui_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/mui_dialog_padding_horizontal</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">2dp</item>
        <item name="mui_paddingBottomWhenNotContent">27dp</item>
    </style>

    <style name="MUI.Dialog.MessageContentDefStyle">
        <item name="android:textColor">?attr/mui_config_color_gray_4</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingLeft">?attr/mui_dialog_padding_horizontal</item>
        <item name="android:paddingRight">?attr/mui_dialog_padding_horizontal</item>
        <item name="android:paddingBottom">28dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="mui_paddingTopWhenNotTitle">27dp</item>
    </style>

    <style name="MUI.Dialog.ActionContainerDefStyle">
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:paddingRight">@dimen/dp_12</item>
        <item name="android:paddingTop">@dimen/dp_0</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="mui_dialog_action_container_justify_content">end</item>
        <item name="mui_dialog_action_height">@dimen/dp_36</item>
        <item name="mui_dialog_action_space">@dimen/dp_8</item>
    </style>

    <style name="MUI.Dialog.ActionViewDefStyle">
        <item name="android:textColor">@color/mui_config_color_blue</item>
        <item name="android:textSize">@dimen/sp_13</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:minWidth">@dimen/dp_64</item>
        <item name="mui_dialog_action_button_padding_horizontal">@dimen/dp_12</item>
        <item name="mui_dialog_action_icon_space">@dimen/dp_6</item>
        <item name="mui_dialog_positive_action_text_color">@color/mui_config_color_blue</item>
        <item name="mui_dialog_negative_action_text_color">@color/mui_config_color_red</item>
    </style>

</resources>
