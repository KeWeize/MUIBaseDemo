<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <vit.com.mui.alpha.MUIAlphaImageButton
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_arrow_left_lined_dark" />

    <ImageView
        android:layout_width="@dimen/dp_28"
        android:layout_height="@dimen/dp_28"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_customerservice_avatar_default" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_weight="1"
        android:text="Sonia 胜楠" />

    <vit.com.mui.widget.roundwidget.MUIRoundButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_0"
        android:minWidth="@dimen/dp_0"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_18"
        android:paddingRight="@dimen/dp_18"
        android:paddingTop="@dimen/dp_8"
        android:text="关注"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/sp_10"
        app:mui_backgroundColor="#3abe96" />

    <vit.com.mui.alpha.MUIAlphaImageButton
        android:layout_width="@dimen/dp_35"
        android:layout_height="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:padding="@dimen/dp_5"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_share_filled_dark" />

</LinearLayout>
